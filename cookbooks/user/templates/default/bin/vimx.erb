#!/bin/sh

case `uname` in
Linux)
  if [ $# -gt 0 ]; then
    # ensure a new tab is created
    gvim --servername GVIM --remote-tab-silent  "$@"
  else
    gvim --servername GVIM
  fi
  ;;
*)
  echo Other;
  if [ $# -gt 0 ]; then
    # ensure a new tab is created
    mvim --servername VIM --remote-tab-silent  "$@"
  else
    mvim --servername VIM
  fi
  ;;
esac

