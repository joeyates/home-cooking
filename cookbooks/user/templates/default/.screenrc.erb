backtick 1 0 1 scm_screen_info

# See man screen, section 'STRING ESCAPES'
hardstatus alwayslastline "%{.wk} %-w%{.bw}%n %t%{-}%+w %{.wb} %-30= %1` %= %{.wk} %c"

msgwait 1
defscrollback 1000
vbell off
startup_message off
# Ensure backspace gets produced under xfce-term
bindkey -d ^@ stuff ^?
bind x
bind ^x

# Use C-z instead of C-a as this makes more sense for Emacs
escape ^zz

screen -t shell   0
screen -t console 1
screen -t app     2
screen -t log     3
select 0

