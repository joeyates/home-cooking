backtick 1 0 1 scm_screen_info

# See man screen, section 'STRING ESCAPES'
hardstatus alwayslastline "%{.Wk}%-w%{.bw}%n %t%{-}%+w %= %1` %= %c"

msgwait 1
defscrollback 10000
vbell off
startup_message off
# Ensure backspace gets produced under xfce-term
bindkey -d ^@ stuff ^?
bind x
bind ^x

#escape ^Ja

screen -t rem  5
screen -t log  4
screen -t app  3
screen -t con  2
screen -t shl  1
screen -t cfg  0
select 1

