backtick 1 0 1 scm_screen_info

# See man screen, section 'STRING ESCAPES'
hardstatus alwayslastline "%{.Wk}%-w%{.bw}%n %t%{-}%+w %= %1` %= %c"

msgwait 1
defscrollback 10000
vbell off
startup_message off
# Ensure backspace gets produced under xfce-term
bindkey -d ^@ stuff ^?
bind x
bind ^x

# Use C-z instead of C-a as this makes more sense for Emacs
escape ^zz

screen -t log     4
screen -t app     3
screen -t console 2
screen -t shell   1
screen -t config  0
select 1

