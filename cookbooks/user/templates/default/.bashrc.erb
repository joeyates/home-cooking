# Source global definitions
if [ -f /etc/bashrc ]; then
  . /etc/bashrc
fi

######################################################
# Common
alias mv='mv -i'
alias rd='rm -rf'
alias ls='ls --color=auto' # All ls listings should have colour
alias ll='ls -l'
alias la='ls -lA'
alias lt='ls -lrt'
export GREP_COLOR=4 # Underline found text
alias ddiff='diff -qr' # Compare directories, reporting differences file by file.
alias rake='rake -sN'
alias g='git'
function f() { find $2 -iname "*$1*"; }
alias v='vimx'

######################################################
# Exports
export PS1='\[\e[1;34m\]${PWD}>\[\e[0m\]'
export PATH=~/bin:./bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin
export INPUTRC=~/.inputrc
export HISTIGNORE="&:[ ]*" # Exclude repeats, commands starting with space
export HISTCONTROL=erasedups
unset HISTFILESIZE
export HISTFILESIZE
export HOSTNAME
export EDITOR=vim

# http://wiki.bash-hackers.org/internals/shell_options
shopt -s histappend
shopt -s cmdhist                          # Save multilines as single
shopt -s dotglob
shopt -s extglob                          # Handle ?/*/+/@/!(...) patterns
shopt -s no_empty_cmd_completion
shopt -s checkhash                        # Check whether programs saved in path cache are still present
# "$BASH_VERSION" >= "4"
# shopt -s dirspell                         # Correct spelling of directory names
# shopt -s globstar

function set_screen_path() {
  screen -X chdir "`pwd`"
}

case $TERM in
  xterm*)
    export PROMPT_COMMAND='history -a;echo -ne "\033]0;${PWD}\007"'
    ;;
  screen*)
    export PROMPT_COMMAND='set_screen_path;history -a'
    ;;
  *)
    export PROMPT_COMMAND=''
    ;;
esac

[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm"

if [ -f /etc/bash_completion ]; then
  . /etc/bash_completion
fi

